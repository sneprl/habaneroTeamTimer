<h4>CONNECTED AS {{user}}</h4>
<div class="row">
    <div id="team" class="col-xs-6">
        <b>SELECT TEAM</b>
        <select id="teamSelect" name="teamSelect">
            <option value="-">-</option>
            <option value="team1">Team 1</option>
            <option value="team2">Team 2</option>
        </select>
        <button id="exitTeamBtn" class="btn" style="display:none;">EXIT TEAM</button>
        <div id="users-connected" class="well well-lg">No Team To Work with</div>
    </div>
    <div id="timer" class="col-xs-6">
        <b>Timer</b> <div id="timer-val">25000</div>
        <button id="toggleTimer" class="btn">START TIMER</button>
        <button id="pauseTimer" class="btn" style="display:none;">PAUSE TIMER</button>
    </div>
</div>

<script src="js/lib/socket.io-1.3.2.js"></script>
<script src="js/index.js"></script>